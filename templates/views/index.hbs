<!DOCTYPE html>
<html lang="en">
  <head>
   {{>headerLink}}
  </head>

  <body>
     {{>navbar}}

    <!-- main header -->
    <div class="container-fluid main_header">
        <div class="row">
            <!-- left div -->
            <div class="col-md-6 col-12 main_header_left">
                <p>Welcome to Weather Info App</p>
                <h1>Get the Latest <span class="text-color">Weather </span>Info of Your City</h1>
                <a class="btn button" href="/weather">Get Your Weather Now</a>
            </div>
            <!-- right div -->
            <div class="col-md-6 col-12 main_header_right">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                      <div class="carousel-item active">
                        <img class=" w-100" src="https://i.imgur.com/ZkyzR5D.jpg" alt="First slide">
                      </div>
                      <div class="carousel-item">
                        <img class=" w-100" src="https://i.imgur.com/ZkyzR5D.jpg" alt="Second slide">
                      </div>
                      <div class="carousel-item">
                        <img class=" w-100" src="https://i.imgur.com/ZkyzR5D.jpg" alt="Third slide">
                      </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="sr-only">Next</span>
                    </a>
                  </div>
            </div>
        </div>
    </div>  
    {{!-- footer --}}
    {{>footer}}
  </body>
</html>
